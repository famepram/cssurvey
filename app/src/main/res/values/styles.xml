<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MyMaterialTheme.Base" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="ProgressCSSurveyTheme" parent="MyMaterialTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="ProgressSurveyQuestWrap" parent="ProgressCSSurveyTheme">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="ProgressSurveyText" parent="ProgressCSSurveyTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ProgressSurveyQuestTextID" parent="ProgressSurveyText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="ProgressSurveyQuestTextEN" parent="ProgressSurveyText">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ProgressInputForm" parent="ProgressCSSurveyTheme">
        <item name="android:layout_marginBottom">@dimen/form_input_text_mbottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ProgressHeaderFragmentTitle" parent="ProgressCSSurveyTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <!--<item name="android:background">@color/colorBlackAlpha60</item>-->
        <item name="android:paddingLeft">@dimen/main_menu_outter_padding</item>
        <item name="android:paddingRight">@dimen/main_menu_outter_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>
    <style name="ProgressHeaderFragmentTitleText" parent="ProgressCSSurveyTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textColor">@color/colorWhite</item>-->
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="ProgressFooterButtonNavBlue" parent="ProgressCSSurveyTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorBlue</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
